<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.0">

    <persistence-unit name="paymentUnit" transaction-type="RESOURCE_LOCAL">

        <class>ec.edu.uce.payments.jpa.Entities.UserP</class>
        <class>ec.edu.uce.payments.jpa.Entities.Product</class>
        <class>ec.edu.uce.payments.jpa.Entities.PaymentMethod</class>
        <class>ec.edu.uce.payments.jpa.Entities.PaymentDetail</class>


        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" /> <!-- DB Driver -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/paymentdb" /> <!-- BD Mane -->
            <property name="jakarta.persistence.jdbc.user" value="root" /> <!-- DB User -->
            <property name="jakarta.persistence.jdbc.password" value="1234" /> <!-- DB Password -->


            <property name="hibernate.hbm2ddl.auto" value="update" /> <!-- create / create-drop / update -->
            <property name="hibernate.show_sql" value="true" /> <!-- Show SQL in console -->
            <property name="hibernate.format_sql" value="true" /> <!-- Show SQL formatted -->

        </properties>

    </persistence-unit>

</persistence>